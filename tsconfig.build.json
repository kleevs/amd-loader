{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "code/build",
    "experimentalDecorators": true,
    "sourceMap": false,
    "declaration": true,
	  "module": "umd",
    "moduleResolution": "classic",
    "emitDecoratorMetadata": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016"
    ],
    "outDir": "src"
  },
  "include" : [ 
    "./code/build/**/*.ts"
  ],
  "exclude" : [
    "./node_modules",
    "./src"
  ]
}
