  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": false,
    "declaration": true,
    "module": "amd",
    "moduleResolution": "classic",
    "emitDecoratorMetadata": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "../node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include" : [ 
    "./example/**/*.ts"
  ],
  "exclude" : [
    "./node_modules"
  ]
}
